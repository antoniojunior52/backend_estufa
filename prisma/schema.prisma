generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  UID       String   @id @default(uuid())
  Name      String
  Password  String
  Email     String   @unique
  isActive Boolean
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}