{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src", 
    "moduleDetection": "force",
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "esm": true
  },
   "include": ["src/**/*"]
}